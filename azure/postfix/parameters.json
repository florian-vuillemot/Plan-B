{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "value": "eastus"
        },
        "networkInterfaceName": {
            "value": "postfix-nin"
        },
        "networkSecurityGroupName": {
            "value": "postfix-vm-nsg"
        },
        "networkSecurityGroupRules": {
            "value": [
                {
                    "name": "HTTPS",
                    "properties": {
                        "priority": 300,
                        "protocol": "TCP",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "443"
                    }
                },
                {
                    "name": "HTTP",
                    "properties": {
                        "priority": 320,
                        "protocol": "TCP",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "80"
                    }
                },
                {
                    "name": "SMTP",
                    "properties": {
                        "priority": 330,
                        "protocol": "*",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "25"
                    }
                }
            ]
        },
        "subnetName": {
            "value": "default"
        },
        "virtualNetworkName": {
            "value": "postfix-vnet"
        },
        "addressPrefixes": {
            "value": [
                "10.0.0.0/24"
            ]
        },
        "subnets": {
            "value": [
                {
                    "name": "default",
                    "properties": {
                        "addressPrefix": "10.0.0.0/24"
                    }
                }
            ]
        },
        "publicIpAddressName": {
            "value": "postfix-ip"
        },
        "publicIpAddressType": {
            "value": "Static"
        },
        "publicIpAddressSku": {
            "value": "Standard"
        },
        "virtualMachineName": {
            "value": "postfix-vm"
        },
        "virtualMachineRG": {
            "value": "postfix-rg"
        },
        "osDiskType": {
            "value": "Premium_LRS"
        },
        "virtualMachineSize": {
            "value": "Standard_B1ms"
        },
        "adminUsername": {
            "value": "epitech"
        },
        "adminPublicKey": {
            "value": null
        },
        "diagnosticsStorageAccountName": {
            "value": "postfixrgdiag"
        },
        "diagnosticsStorageAccountId": {
            "value": "Microsoft.Storage/storageAccounts/postfixrgdiag"
        },
        "diagnosticsStorageAccountType": {
            "value": "Standard_LRS"
        },
        "diagnosticsStorageAccountKind": {
            "value": "Storage"
        },
        "backupVaultName": {
            "value": "postfix-bk"
        },
        "backupFabricName": {
            "value": "Azure"
        },
        "backupVaultRGName": {
            "value": "postfix-bc-rg"
        },
        "backupVaultRGIsNew": {
            "value": true
        },
        "backupPolicyName": {
            "value": "DailyPolicy"
        },
        "backupPolicySchedule": {
            "value": {
                "schedulePolicyType": "SimpleSchedulePolicy",
                "scheduleRunFrequency": "Daily",
                "scheduleRunDays": [
                    "Sunday"
                ],
                "scheduleRunTimes": [
                    "2019-01-05T07:00:00.000Z"
                ]
            }
        },
        "backupPolicyRetention": {
            "value": {
                "retentionPolicyType": "LongTermRetentionPolicy",
                "dailySchedule": {
                    "retentionTimes": [
                        "2019-01-05T07:00:00.000Z"
                    ],
                    "retentionDuration": {
                        "count": 180,
                        "durationType": "Days"
                    }
                }
            }
        },
        "backupPolicyTimeZone": {
            "value": "UTC"
        },
        "backupItemName": {
            "value": "vm;iaasvmcontainerv2;postfix-rg;postfix-vm"
        }
    }
}
